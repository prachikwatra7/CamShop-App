

<h1 align="center">Welcome!!!</h1>

<h2 align="center">Listing All Products</h2>

<% @products.each do |product| %>

  <div class="w3-container w3-padding-32 w3-theme-l5 w3-center" id="contact">
    <div class="w3-row">
      <h3 align="center"><span class="w3-xlarge w3-border-teal w3-bottombar">Product: <%= product.title %></span></h3>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Description: <%= product.description %></p>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Price: <%= product.price %></p>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Making Year: <%= product.make %></p>
      <% product.save %>
      
     </div> 
  </div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
      <tr>
        <td class="w3-large w3-border-teal "><%= link_to 'Show', product_path(product) %> |</td> 
        <td class="w3-large w3-border-teal "><%= link_to 'Edit', edit_product_path(product) %> |</td> 
        <td class="w3-large w3-border-teal "><%= link_to 'Destroy',product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    
   </tbody>
</table>
<br>
  <% end %>
<h3 align="center"><span class="w3-xlarge w3-border-teal w3-bottombar"><%= link_to "Create new Product", new_product_path %></span></h3>


